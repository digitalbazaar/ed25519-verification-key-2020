{
  "name": "@digitalbazaar/ed25519-verification-key-2020",
  "version": "4.2.0",
  "description": "Javascript library for generating and working with Ed25519VerificationKey2020 key pairs, for use with crypto-ld.",
  "homepage": "https://github.com/digitalbazaar/ed25519-verification-key-2020",
  "repository": {
    "type": "git",
    "url": "https://github.com/digitalbazaar/ed25519-verification-key-2020"
  },
  "license": "BSD-3-Clause",
  "type": "module",
  "exports": "./lib/index.js",
  "browser": {
    "./lib/ed25519.js": "./lib/ed25519-browser.js"
  },
  "files": [
    "lib/**/*.js"
  ],
  "dependencies": {
    "@noble/ed25519": "^1.6.0",
    "base58-universal": "^2.0.0",
    "base64url-universal": "^2.0.0",
    "crypto-ld": "^7.0.0"
  },
  "devDependencies": {
    "@digitalbazaar/ed25519-verification-key-2018": "^4.0.0",
    "@stablelib/ed25519": "^1.0.2",
    "c8": "^7.11.3",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.16.0",
    "eslint-config-digitalbazaar": "^3.0.0",
    "eslint-plugin-jsdoc": "^39.3.2",
    "eslint-plugin-unicorn": "^42.0.0",
    "karma": "^6.3.20",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-webpack": "^5.0.0",
    "mocha": "^10.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "multibase": "^3.1.0",
    "multicodec": "^2.0.1",
    "webpack": "^5.72.1"
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "test": "npm run test-node",
    "test-karma": "karma start karma.conf.cjs",
    "test-node": "cross-env NODE_ENV=test mocha --preserve-symlinks -t 10000 test/**/*.spec.js",
    "coverage": "cross-env NODE_ENV=test c8 npm run test-node",
    "coverage-ci": "cross-env NODE_ENV=test c8 --reporter=lcovonly --reporter=text-summary --reporter=text npm run test-node",
    "coverage-report": "c8 report",
    "lint": "eslint ."
  },
  "c8": {
    "reporter": [
      "lcov",
      "text-summary",
      "text"
    ]
  }
}
